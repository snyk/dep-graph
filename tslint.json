{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": {
      "options": "single"
    },
    "variable-name": [true, "allow-leading-underscore"]
  }
}
